FROM nginx:latest

# Installer les dépendances de build et PCRE2
RUN apt-get update && \
    apt-get install -y \
    git \
    build-essential \
    libtool \
    autoconf \
    automake \
    pkg-config \
    libpcre3-dev \
    libpcre2-dev \
    libxml2-dev \
    libcurl4-openssl-dev \
    libgeoip-dev \
    libyajl-dev \
    libssl-dev \
    zlib1g-dev \
    wget && \
    apt-get clean

# Cloner et construire ModSecurity
WORKDIR /usr/src
RUN git clone --depth 1 https://github.com/SpiderLabs/ModSecurity.git && \
    cd ModSecurity && \
    git submodule init && \
    git submodule update && \
    ./build.sh && \
    ./configure && \
    make && make install

# Cloner ModSecurity-nginx (pour construire le module Nginx, si nécessaire)
RUN git clone --depth 1 https://github.com/SpiderLabs/ModSecurity-nginx.git

COPY Nginx/nginx.conf /etc/nginx/nginx.conf
# COPY Nginx/conf.d/* /etc/nginx/conf.d/
COPY ModSecurity/modsecurity.conf /etc/modsecurity/modsecurity.conf
COPY ModSecurity/crs-setup.conf /etc/modsecurity/crs-setup.conf

# Nettoyage
RUN apt-get clean && rm -rf /var/lib/apt/lists/*
