{
  "compilerOptions": {
    "types": ["node"],
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./public",
    "inlineSourceMap": true,
    "inlineSources": true,
    "strict": true,
    "allowJs": true,
    // "noEmit": true, // Disable emitting files, as we are using Babel for transpilation
    // "allowImportingTsExtensions": true, // Allow importing .ts files
    "strictNullChecks": false           // TODO: Set to true when all code is updated
  },
  "include": ["public/static/js/**/*.ts"],
  "exclude": ["node_modules"]
}

